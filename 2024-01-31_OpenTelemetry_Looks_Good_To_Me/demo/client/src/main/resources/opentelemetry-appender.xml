<?xml version="1.0" encoding="UTF-8"?>
<!-- https://github.com/FWinkler79/spring3-observability/blob/main/spring3-demo-client/src/main/resources/opentelemetry-appender.xml -->
<included>
  <springProperty scope="context" name="endpoint" source="management.otlp.logs.endpoint"/>
  <springProperty scope="context" name="resourceAttributes" source="opentelemetry.resource-attributes"/>
  
  <appender name="OPEN_TELEMETRY" class="com.demo.client.LogbackOpenTelemetryAppender">
    <endpoint>${endpoint}</endpoint>
    <captureExperimentalAttributes>true</captureExperimentalAttributes>
    <captureKeyValuePairAttributes>true</captureKeyValuePairAttributes>
    <resourceAttributes>${resourceAttributes}</resourceAttributes>
  </appender>
</included>